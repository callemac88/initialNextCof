{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@styles/*": ["styles/*"],
      "@components/*" : ["components/*"],
      "@common/*" : ["common/*"],
      "@layout/*" : ["layout/*"],
      "@hooks/*" : ["hooks/*"],
      "@services/*" : ["services/*"],
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "images": {
    "domains": ["api.lorem.space/image"],
  },
}
